{% extends "ProblematicTutorialBundle::layout.html.twig" %}

{% block title %}New Tutorial{% endblock %}

{% block content %}
<h1>Write a tutorial</h1>

<form action="{{ path('problematic_tutorial_tutorials_new') }}" method="post" {{ form_enctype(form) }}>
{% if not is_granted('IS_AUTHENTICATED_REMEMBERED') %}
    <div class="clearfix">
        {{ form_label(form.author_name) }}
        <div class="input">
            {{ form_errors(form.author_name) }}
            {{ form_widget(form.author_name, { 'attr': {'class': 'span10'}}) }}
        </div>
    </div>
    <div class="clearfix">
        {{ form_label(form.author_email) }}
        <div class="input">
            {{ form_errors(form.author_email) }}
            {{ form_widget(form.author_email, { 'attr': {'class': 'span10'}}) }}
        </div>
    </div>
    <hr />
{% endif %}
    <div class="clearfix">
        {{ form_label(form.title) }}
        <div class="input">
            {{ form_errors(form.title) }}
            {{ form_widget(form.title, { 'attr': {'class': 'span10'}}) }}
        </div>
    </div>
    <div class="clearfix">
        {{ form_label(form.description) }}
        <div class="input">
            {{ form_errors(form.description) }}
            {{ form_widget(form.description, { 'attr': {'class': 'span10'}}) }}
        </div>
    </div>
    <div class="clearfix">
        {{ form_label(form.content) }}
        <div class="input">
            {{ form_errors(form.content) }}
            {{ form_widget(form.content, { 'attr': {'class': 'span10'}}) }}
        </div>
    </div>
    {{ form_rest(form) }}
    <input class="btn primary" type="submit" />
</form>
{% endblock %}